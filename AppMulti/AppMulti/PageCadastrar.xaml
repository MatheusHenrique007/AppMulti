<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMulti.PageCadastrar">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Cadastro de Clientes" TextColor="White" FontAttributes="Bold" FontSize="Large"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Margin="15">
            <Label Text="Nome" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtNome" Keyboard="Default"/>
            <Label Text="Celular" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtCelular" Keyboard="Numeric"/>
            <Button Text="Cadastrar" BackgroundColor="White" FontAttributes="Bold" x:Name="btnCadastrar" Clicked="btnCadastrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>