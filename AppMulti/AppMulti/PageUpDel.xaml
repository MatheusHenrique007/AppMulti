<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMulti.PageUpDel" Title="Editar \ Apagar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtNome" Keyboard="Default" Text="{Binding nome, Mode=TwoWay}"/>
            <Label Text="Celular" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtCelular" Keyboard="Numeric" Text="{Binding celular, Mode=TwoWay}"/>
            <Button Text="Atualizar" BackgroundColor="White" FontAttributes="Bold" x:Name="btnAtualizar" Clicked="btnAtualizar_Clicked"/>
            <Button Text="Apagar" BackgroundColor="White" FontAttributes="Bold" x:Name="btnApagar" Clicked="btnApagar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>